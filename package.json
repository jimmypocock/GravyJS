{
  "name": "gravyjs",
  "version": "1.0.0",
  "description": "A WYSIWYG editor for React/NextJS applications",
  "main": "dist/index.js",
  "type": "module",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c && npm run build:types",
    "build:watch": " rollup -c --watch && npm run build:types",
    "build:types": "cp src/index.d.ts dist/index.d.ts",
    "test": "jest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run build",
    "demo:install": "cd demo && npm install",
    "demo:link": "npm link && cd demo && npm link gravyjs",
    "dev": "concurrently --names \"gravyjs, demo\" --prefix-colors \"blue.bold,green.bold\"  \"npm run build:watch\" \"npm run dev:demo\"",
    "dev:demo": "cd demo && npm run dev"
  },
  "dependencies": {},
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "babel-jest": "^29.7.0",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.1.2",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rollup": "^4.40.2",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "style-loader": "^4.0.0",
    "typescript": "^5.8.3",
    "webpack": "^5.99.8",
    "webpack-cli": "^6.0.1"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "wysiwyg",
    "editor",
    "nextjs",
    "variables",
    "templates",
    "snippets",
    "rich-text",
    "contenteditable"
  ],
  "author": "Jimmy Pocock",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jimmypocock/gravyjs.git"
  },
  "bugs": {
    "url": "https://github.com/jimmypocock/gravyjs/issues"
  },
  "homepage": "https://github.com/jimmypocock/gravyjs#readme",
  "engines": {
    "node": ">=14.0.0"
  }
}
